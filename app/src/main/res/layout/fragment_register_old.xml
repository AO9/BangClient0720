<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/info_backgroud"
    android:showDividers="middle"
    android:divider="@drawable/divider"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/nickname_tv"
            android:layout_width="@dimen/tv_width_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="昵称"
            android:textSize="@dimen/info_item_left_text_size" />

        <EditText
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="10"
            style="@style/edittext_style"
            android:layout_marginLeft="@dimen/left_margin_large"
            android:id="@+id/register_nickname_et"
            android:hint="不超过10个字符"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/nickname_tv"
            android:layout_toEndOf="@+id/nickname_tv" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:layout_height="@dimen/info_item_height"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/secret_tv"
            android:layout_width="@dimen/tv_width_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="密码" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin_large"
            android:id="@+id/register_secret_et"
            android:hint="输入密码"
            style="@style/edittext_style"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/secret_tv"
            android:layout_toEndOf="@+id/secret_tv"
            android:password="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/secret_2_tv"
            android:layout_width="@dimen/tv_width_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="确认密码"
            android:textSize="@dimen/info_item_left_text_size"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin_large"
            android:id="@+id/register_secret_2_et"
            android:hint="再次输入密码"
            style="@style/edittext_style"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/secret_2_tv"
            android:layout_toEndOf="@+id/secret_2_tv"
            android:password="true" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:layout_height="@dimen/info_item_height"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="@dimen/tv_width_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLength="11"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="手机号" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin_large"
            android:id="@+id/register_phone_et"
            android:hint="输入11位有效手机号"
            style="@style/edittext_style"
            android:textSize="@dimen/info_item_left_text_size"
            android:maxLength="11"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/phone_tv"
            android:layout_toEndOf="@+id/phone_tv"
            android:phoneNumber="true" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/school_tv"
            android:layout_width="@dimen/tv_width_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="学校"
            android:textSize="@dimen/info_item_left_text_size" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/edittext_style"
            android:layout_marginLeft="@dimen/left_margin_large"
            android:id="@+id/register_school_et"
            android:hint="如：北京交通大学"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/school_tv"
            android:layout_toEndOf="@+id/school_tv" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/bang_aducation_lv"
        android:layout_height="@dimen/info_item_height"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/bang_education_tv"
            android:layout_width="@dimen/tv_width_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="学历"
            android:textSize="@dimen/info_item_left_text_size"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/edittext_style"
            android:layout_marginLeft="@dimen/sides_margin_large"
            android:gravity="center_vertical"
            android:id="@+id/bang_education_et"
            android:hint="未选择"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/bang_education_tv"
            android:layout_toEndOf="@+id/bang_education_tv"
            />
    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:background="@android:color/white">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交"
            android:id="@+id/f_register_ok_btn"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/color_theme"
            android:textColor="@color/withe"
            />
    </RelativeLayout>

</LinearLayout>
