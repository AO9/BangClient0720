                    android:layout_width="@dimen/tv_width_70"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sides_margin"
                    android:maxLength="11"
                    android:text="手机号"
                    android:textSize="@dimen/info_item_left_text_size" />

                <EditText
                    android:id="@+id/register_phone_et"
                    style="@style/edittext_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/left_margin_large"
                    android:layout_toEndOf="@+id/phone_tv"
                    android:layout_toRightOf="@+id/phone_tv"
                    android:hint="请输入您的手机号"
                    android:maxLength="11"
                    android:phoneNumber="true"
                    android:textSize="@dimen/info_item_left_text_size" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wechat_lv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_item_height"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/wechat_tv"
                    android:layout_width="@dimen/tv_width_70"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sides_margin"
                    android:text="微信"
                    android:textSize="@dimen/info_item_left_text_size" />

                <EditText
                    android:id="@+id/wehcat_et"
                    style="@style/edittext_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sides_margin_large"
                    android:layout_toEndOf="@+id/wechat_tv"
                    android:layout_toRightOf="@+id/wechat_tv"
                    android:gravity="center_vertical"
                    android:hint="请填写正确的微信账号"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:textSize="@dimen/info_item_left_text_size" />
            </RelativeLayout>

