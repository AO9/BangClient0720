<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/info_backgroud"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    android:showDividers="middle">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/small_sides_margin"
        android:layout_marginLeft="@dimen/small_sides_margin"
        android:layout_marginTop="@dimen/small_sides_margin"
        android:layout_marginBottom="@dimen/small_sides_margin"
        android:layout_weight="1"
        android:background="@color/withe"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_sides_margin"
            android:layout_marginTop="@dimen/common_sides_margin"
            android:text="海绵模考"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/courseTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_sides_margin"
            android:layout_marginTop="@dimen/common_sides_margin"
            android:text="盛夏摸底考试"
            android:textColor="@android:color/darker_gray"
            android:textSize="10dp"

            android:id="@+id/courseDescribe1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_sides_margin"
            android:layout_marginTop="@dimen/common_sides_margin"
            android:text="已有100人报名"
            android:textColor="@android:color/darker_gray"
            android:textSize="8dp"
            android:id="@+id/courseDescribe2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        </LinearLayout>

        <TextView
            android:id="@+id/signUp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/common_sides_margin"
            android:layout_marginLeft="@dimen/common_sides_margin"
            android:layout_marginRight="@dimen/common_sides_margin"
            android:layout_marginTop="@dimen/common_sides_margin"
            android:background="@color/color_theme"
            android:text="立即报名"
            android:textColor="@color/withe"
            android:textSize="13dp" />


    </LinearLayout>


</LinearLayout>
