<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/info_backgroud"
            android:divider="@drawable/abc_list_divider_holo_dark"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_sides_margin"
                android:layout_marginLeft="@dimen/small_sides_margin"
                android:layout_marginTop="@dimen/small_sides_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="直播课"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_sides_margin"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:showDividers="middle">

                <com.gto.bang.component.GridviewCustom
                    android:id="@+id/offlineCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="30dp"
                    android:horizontalSpacing="2dp"
                    android:numColumns="2"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_sides_margin"
                android:layout_marginLeft="@dimen/small_sides_margin"
                android:visibility="gone"
                android:layout_marginTop="@dimen/small_sides_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="原创解读"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_sides_margin"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:showDividers="middle">

                <com.gto.bang.component.GridviewCustom
                    android:id="@+id/soleArticle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="30dp"
                    android:horizontalSpacing="2dp"
                    android:numColumns="2"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_sides_margin"
                android:layout_marginLeft="@dimen/small_sides_margin"
                android:visibility="gone"
                android:layout_marginTop="@dimen/small_sides_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="独家课程"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_sides_margin"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:showDividers="middle">

                <com.gto.bang.component.GridviewCustom
                    android:id="@+id/onlineCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="30dp"
                    android:horizontalSpacing="2dp"
                    android:numColumns="2"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="2dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>