<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/info_backgroud"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    android:showDividers="middle">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/small_sides_margin"
        android:layout_marginLeft="@dimen/small_sides_margin"
        android:layout_marginRight="@dimen/small_sides_margin"
        android:layout_marginTop="@dimen/small_sides_margin"
        android:layout_weight="1"
        android:background="@color/withe"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_sides_margin"
            android:layout_marginTop="@dimen/common_sides_margin"
            android:maxLines="1"
            android:text="海绵模考海绵模考海绵模考"
            android:textColor="@color/color_theme"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/common_sides_margin"
            android:layout_marginTop="@dimen/common_sides_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="盛夏摸底考试盛夏摸底考试盛夏摸底考试盛夏摸底考试盛夏摸底考试盛夏摸底考试盛夏摸底考试"
            android:textColor="@android:color/darker_gray"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>

    </LinearLayout>


</LinearLayout>
