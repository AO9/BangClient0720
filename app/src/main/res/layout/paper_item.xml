<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/info_backgroud"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/withe"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_sides_margin"
            android:layout_marginLeft="@dimen/small_sides_margin"
            android:layout_marginRight="@dimen/small_sides_margin"
            android:layout_marginTop="@dimen/small_sides_margin"
            android:layout_weight="4"
            android:background="@color/withe"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_sides_margin"
                android:layout_marginTop="@dimen/common_sides_margin"
                android:maxLines="1"
                android:text="海绵模考海绵模考海绵模考"
                android:textColor="@color/color_theme"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/describe"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/common_sides_margin"
                android:layout_marginTop="@dimen/common_sides_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="盛夏摸底考试盛夏摸底考试盛夏摸底考试盛夏摸底考试盛夏摸底考试盛夏摸底考试盛夏摸底考试"
                android:textColor="@android:color/darker_gray"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/copy"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@color/color_theme"
                android:text="预约"
                android:textColor="@color/withe"
                android:textSize="14dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
