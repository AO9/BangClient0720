<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/info_backgroud"
    android:showDividers="middle"
    android:divider="@drawable/divider"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:background="@android:color/white"
        >
        <EditText
            android:id="@+id/publish_theme_et"
            style="@style/edittext_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:textSize="@dimen/info_item_left_text_size"
            android:hint="主  题">
            <requestFocus />
        </EditText>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/white">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginLeft="@dimen/sides_margin"
            android:textSize="@dimen/info_item_left_text_size"
            android:hint="描述一下你的活动计划"
            style="@style/edittext_style"
            android:ems="10"
            android:id="@+id/publish_describe_et"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/publish_location_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="地  点"
            android:textSize="@dimen/info_item_left_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sides_margin_large"
            android:textSize="@dimen/info_item_left_text_size"
            android:text="北京 海淀区"
            android:id="@+id/publish_location_tv"
            android:layout_alignTop="@+id/publish_location_item"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/publish_begintime_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="起始时间" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sides_margin_large"
            android:textSize="@dimen/info_item_left_text_size"
            android:text="2016-05-12"
            android:id="@+id/publish_begintime_tv"
            android:layout_alignTop="@+id/publish_begintime_item"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/publish_endtime_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="结束时间"
            android:textSize="@dimen/info_item_left_text_size"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sides_margin_large"
            android:textSize="@dimen/info_item_left_text_size"
            android:text="2016-05-12"
            android:id="@+id/publish_endtime_tv"
            android:layout_alignTop="@+id/publish_endtime_item"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:background="@android:color/white">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffee"
            android:text="确认发布"
            android:id="@+id/publish_ok_btn"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            />
    </RelativeLayout>

</LinearLayout>
