<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_top_margin"
        android:layout_marginLeft="@dimen/sides_margin"
        android:layout_marginRight="@dimen/sides_margin"
        >
        <TextView
            android:layout_width="@dimen/head_icon_size"
            android:layout_height="@dimen/head_icon_size"
            android:gravity="center"
            android:textColor="@color/withe"
            android:background="@drawable/corner"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:textSize="@dimen/common_text_size"
            android:id="@+id/head_c_tv"
            android:text="å¸®"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/small_sides_margin"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:ellipsize="end"
            android:textSize="@dimen/common_text_size"
            android:maxLines="1"
            android:text="username"
            android:id="@+id/author_c_tv" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/tv_top_margin"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_top_margin"
        android:layout_marginLeft="@dimen/sides_margin"
        android:layout_marginRight="@dimen/sides_margin"
        ></LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/tv_top_margin"
        android:layout_marginLeft="@dimen/sides_margin"
        android:layout_marginRight="@dimen/sides_margin"
        android:layout_marginBottom="@dimen/tv_top_margin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:textSize="@dimen/mid_common_text_size"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="content"
            android:id="@+id/content_c_tv" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_top_margin"
        android:layout_marginLeft="@dimen/sides_margin"
        android:layout_marginRight="@dimen/sides_margin"
        android:layout_marginBottom="@dimen/tv_top_margin"
        >
    </RelativeLayout>
</LinearLayout>