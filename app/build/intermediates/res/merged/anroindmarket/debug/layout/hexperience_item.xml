<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_top_margin"
        android:layout_marginLeft="@dimen/sides_margin"
        android:layout_marginRight="@dimen/sides_margin"
        >
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="@color/withe"
            android:background="@drawable/corner"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:textSize="12dp"
            android:id="@+id/head_e_tv"
            android:text="帮"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/small_sides_margin"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:ellipsize="end"
            android:textSize="@dimen/common_text_size"
            android:maxLines="1"
            android:text="username"
            android:id="@+id/author_e_tv" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/tv_top_margin"
            />
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="20160102"-->
            <!--android:id="@+id/date_e_tv"-->
            <!--android:layout_marginTop="@dimen/tv_top_margin"-->
            <!--android:textSize="@dimen/common_text_size"-->
            <!--android:textColor="@android:color/darker_gray"-->
            <!--/>-->
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_top_margin"
        android:layout_marginLeft="@dimen/sides_margin"
        android:layout_marginRight="@dimen/sides_margin"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="@dimen/super_common_text_size"
            android:maxLines="2"
            android:textColor="@android:color/background_dark"
            android:text="demo"
            android:id="@+id/title_e_tv" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/tv_top_margin"
        android:layout_marginLeft="@dimen/sides_margin"
        android:layout_marginRight="@dimen/sides_margin"
        android:layout_marginBottom="@dimen/tv_top_margin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:textSize="@dimen/mid_common_text_size"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="content"
            android:id="@+id/content_e_tv" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sides_margin"
        android:layout_marginRight="@dimen/sides_margin"
        android:layout_marginTop="@dimen/common_sides_margin"
        android:layout_marginBottom="@dimen/sides_mid_margin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_text_size"
            android:gravity="center|left"
            android:layout_marginRight="@dimen/common_sides_margin"
            android:text="阅读:"
            android:textColor="@android:color/darker_gray"
            android:ellipsize="end"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_text_size"
            android:gravity="center|left"
            android:textColor="@android:color/darker_gray"
            android:ellipsize="end"
            android:id="@+id/experience_viewtimes_tv" />
    </LinearLayout>
