<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/info_backgroud">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@android:color/white"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[论文帮]"
            android:textSize="20dp"/>
        <TextView
            android:layout_marginTop="@dimen/info_item_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经验｜在这里你可以分享论文写作经验"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问答｜在这里你可以与同学们互动交流"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONE｜繁忙的生活里，每日一文就够了"/>
        <TextView
            android:layout_marginTop="@dimen/info_item_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="－［大学毕业季，加入论文帮］"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="－［Beta版］论文帮不定期更新，期待您的守候"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/home_nickname_tv"
            android:layout_width="@dimen/tv_width_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="昵称"
            android:textSize="@dimen/info_item_left_text_size" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/edittext_style"
            android:layout_marginLeft="@dimen/sides_margin_large"
            android:id="@+id/home_nickname_et"
            android:hint="输入昵称"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/home_nickname_tv"
            android:layout_toEndOf="@+id/home_nickname_tv" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/home_password_tv"
            android:layout_width="@dimen/tv_width_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="密码" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sides_margin_large"
            android:id="@+id/home_password_et"
            android:hint="输入密码"
            style="@style/edittext_style"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/home_password_tv"
            android:layout_toEndOf="@+id/home_password_tv"
            android:password="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:background="@android:color/white">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:id="@+id/home_login_btn"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:layout_marginRight="@dimen/sides_margin"
            android:background="@color/color_theme"
            android:textColor="@color/withe"
            />
    </RelativeLayout>


</LinearLayout>