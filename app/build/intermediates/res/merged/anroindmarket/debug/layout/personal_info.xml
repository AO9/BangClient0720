<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/info_backgroud"
    android:showDividers="middle"
    android:divider="@drawable/divider"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:id="@+id/info_icon_rl"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/headIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:gravity="center"
            android:textColor="@color/withe"
            android:background="@drawable/corner"
            android:textSize="@dimen/super_common_text_size"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="账号等级"
            android:id="@+id/instruction"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/info_item_right_text_size"
            android:textColor="@color/dark_green"
            android:layout_marginRight="@dimen/big_sides_margin"
            android:layout_marginEnd="@dimen/big_sides_margin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="论文新人"
            android:id="@+id/info_level_tv"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/info_item_right_text_size"
            android:textColor="@android:color/darker_gray"
            android:layout_marginRight="@dimen/sides_margin"
            android:layout_marginEnd="@dimen/sides_margin" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:id="@+id/info_name_rl"
        android:background="@android:color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/sides_margin"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:textSize="@dimen/info_item_left_text_size"
            android:maxLines="1"
            android:text="昵  称" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/tv_top_margin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="未填写"
            android:id="@+id/info_name_tv"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:layout_marginRight="@dimen/sides_margin"
            android:textSize="@dimen/common_text_size"
            android:textColor="@android:color/darker_gray"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:id="@+id/info_gender_rl"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/tv_top_margin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/sides_margin"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:textSize="@dimen/info_item_left_text_size"
            android:maxLines="1"
            android:text="性  别"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/tv_top_margin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="未填写"
            android:id="@+id/info_gender_tv"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:layout_marginRight="@dimen/sides_margin"
            android:textSize="@dimen/common_text_size"
            android:textColor="@android:color/darker_gray"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:id="@+id/info_region_rl"
        android:background="@android:color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/sides_margin"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:textSize="@dimen/info_item_left_text_size"
            android:maxLines="1"
            android:text="地  区"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/tv_top_margin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="未填写"
            android:id="@+id/info_region_tv"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:layout_marginRight="@dimen/sides_margin"
            android:textSize="@dimen/common_text_size"
            android:textColor="@android:color/darker_gray"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:id="@+id/info_signature_rl"
        android:background="@android:color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/sides_margin"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:textSize="@dimen/info_item_left_text_size"
            android:maxLines="1"
            android:text="签  名"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/tv_top_margin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="未填写"
            android:id="@+id/info_signature_tv"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:layout_marginRight="@dimen/sides_margin"
            android:textSize="@dimen/common_text_size"
            android:textColor="@android:color/darker_gray"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:id="@+id/info_academy_rl"
        android:background="@android:color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/sides_margin"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:textSize="@dimen/info_item_left_text_size"
            android:maxLines="1"
            android:text="学  院"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/tv_top_margin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="未填写"
            android:id="@+id/info_academy_tv"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:layout_marginRight="@dimen/sides_margin"
            android:textSize="@dimen/common_text_size"
            android:textColor="@android:color/darker_gray"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:layout_height="@dimen/small_height"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:textSize="@dimen/small_text_size"
            android:text="提示：以下字段注册后不可编辑哦" />
    </RelativeLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:id="@+id/info_school_rl"
        android:background="@android:color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/sides_margin"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:textSize="@dimen/info_item_left_text_size"
            android:maxLines="1"
            android:text="学  校"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/tv_top_margin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="未填写"
            android:id="@+id/info_shcool_tv"
            android:layout_marginTop="@dimen/tv_top_margin"
            android:layout_marginRight="@dimen/sides_margin"
            android:textSize="@dimen/common_text_size"
            android:textColor="@android:color/darker_gray"
            />
    </LinearLayout>




</LinearLayout>
