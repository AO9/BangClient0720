<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="@dimen/tv_height"
        android:layout_marginLeft="@dimen/sides_margin"
        android:layout_marginRight="@dimen/sides_margin"
        android:layout_marginBottom="@dimen/tv_top_margin"
        >
        <TextView
            android:id="@+id/bang_ecomment_item_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="一名ID为学生的网友"
            android:textSize="@dimen/common_text_size"
            android:textColor="@color/dark_blue"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20160102"
            android:id="@+id/bang_ecomment_item_date_tv"
            android:layout_alignTop="@+id/bang_ecomment_item_author_tv"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/common_text_size"
            android:textColor="@android:color/darker_gray"
            android:layout_marginRight="@dimen/sides_margin"
            android:layout_marginEnd="@dimen/sides_margin" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_height"
        android:layout_marginLeft="@dimen/sides_margin"
        android:layout_marginRight="@dimen/sides_margin"
        android:layout_marginBottom="@dimen/tv_top_margin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好文章！给好评！继续努力！"
            android:textSize="@dimen/big_common_text_size"
            android:id="@+id/bang_ecomment_item_content_tv" />
    </LinearLayout>
</LinearLayout>