        <!--下面标签里的一个属性，上面注释之后 这个也随之注释 android:layout_alignTop="@+id/author_e_tv1"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20160102"
            android:id="@+id/date_e_tv"

            android:layout_alignParentRight="true"
