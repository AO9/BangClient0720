<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/info_backgroud"
android:showDividers="middle"
android:divider="@drawable/divider"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/info_item_height"
    android:layout_marginTop="@dimen/info_item_margin_top"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/f_login_phone_tv"
        android:layout_width="@dimen/tv_width_70"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/sides_margin"
        android:text="手机号"
        android:textSize="@dimen/info_item_left_text_size" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/edittext_style"
        android:layout_marginLeft="@dimen/sides_margin_large"
        android:id="@+id/f_login_phone_et"
        android:hint="输入11位手机号"
        android:textSize="@dimen/info_item_left_text_size"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/f_login_phone_tv"
        android:layout_toEndOf="@+id/f_login_phone_tv" />
</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/info_item_height"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/f_login_password_tv"
        android:layout_width="@dimen/tv_width_70"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/info_item_left_text_size"
        android:layout_marginLeft="@dimen/sides_margin"
        android:text="密码" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sides_margin_large"
        android:id="@+id/f_login_password_et"
        android:hint="输入密码"
        style="@style/edittext_style"
        android:textSize="@dimen/info_item_left_text_size"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/f_login_password_tv"
        android:layout_toEndOf="@+id/f_login_password_tv" />
</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/info_item_height"
    android:layout_marginTop="@dimen/info_item_margin_top"
    android:background="@android:color/white">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffee"
        android:text="登录"
        android:id="@+id/f_login_save_bt"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />
</RelativeLayout>

</LinearLayout>
