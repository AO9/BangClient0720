<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/info_backgroud"
    android:showDividers="middle"
    android:divider="@drawable/divider"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:id="@+id/info_head_rl"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:background="@android:color/white"
        >
        <TextView
            android:id="@+id/info_head_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="头  像"
            android:textSize="@dimen/info_item_left_text_size"
            />
        <ImageView
            android:id="@+id/info_head_iv"
            android:layout_width="@dimen/info_iten_head_size"
            android:layout_height="@dimen/info_iten_head_size"
            android:src="@drawable/dsp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/sides_margin"
            android:layout_marginEnd="@dimen/sides_margin" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:id="@+id/info_name_rl"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/info_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="昵  称" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="傲九"
            android:id="@+id/info_name_tv"
            android:layout_alignTop="@+id/info_name_item"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/info_item_right_text_size"
            android:textColor="@android:color/darker_gray"
            android:layout_marginRight="@dimen/sides_margin"
            android:layout_marginEnd="@dimen/sides_margin" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:id="@+id/info_flag_rl"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/info_flag_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:textSize="@dimen/info_item_left_text_size"
            android:text="标  签" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人文学院"
            android:id="@+id/info_flag_tv"
            android:layout_alignTop="@+id/info_flag_item"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/info_item_right_text_size"
            android:layout_marginRight="@dimen/sides_margin"
            android:layout_marginEnd="@dimen/sides_margin"
            android:textColor="@android:color/darker_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="@dimen/info_item_margin_top"
        android:id="@+id/info_gender_rl"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/info_gender_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="性  别"
            android:textSize="@dimen/info_item_left_text_size" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阳关男孩"
            android:id="@+id/info_gender_tv"
            android:layout_alignTop="@+id/info_gender_item"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/info_item_right_text_size"
            android:layout_marginRight="@dimen/sides_margin"
            android:textColor="@android:color/darker_gray"
            android:layout_marginEnd="@dimen/sides_margin" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:id="@+id/info_region_rl"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/info_region_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/info_item_left_text_size"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="地  区" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京海淀"
            android:textSize="@dimen/info_item_right_text_size"
            android:id="@+id/info_region_tv"
            android:layout_alignTop="@+id/info_region_item"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/sides_margin"
            android:textColor="@android:color/darker_gray"
            android:layout_marginEnd="@dimen/sides_margin" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:id="@+id/info_signature_rl"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/info_signature_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sides_margin"
            android:text="签  名"
            android:textSize="@dimen/info_item_left_text_size"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="世界这么大，有你我就够了"
            android:id="@+id/info_signature_tv"
            android:layout_alignTop="@+id/info_signature_item"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/info_item_right_text_size"
            android:textColor="@android:color/darker_gray"
            android:layout_marginRight="@dimen/sides_margin"
            android:layout_marginEnd="@dimen/sides_margin" />
    </RelativeLayout>

</LinearLayout>
